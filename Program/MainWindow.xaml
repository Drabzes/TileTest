<Window x:Class="Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="500" Width="650">
    <Grid x:Name="Display">
        <Canvas x:Name="drawingCanvas" HorizontalAlignment="Left" Height="1200" Margin="10,10,0,0" VerticalAlignment="Top" Width="1920" MouseLeftButtonDown="drawingCanvas_MouseLeftButtonDown"/>

    </Grid>
</Window>
